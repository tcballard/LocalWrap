{
    "name": "localwrap",
    "version": "1.0.0",
    "description": "Secure desktop wrapper for localhost development servers",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "start:3000": "PORT=3000 electron .",
        "start:3001": "PORT=3001 electron .",
        "start:3002": "PORT=3002 electron .",
        "start:8000": "PORT=8000 electron .",
        "start:8080": "PORT=8080 electron .",
        "dev:3001": "PORT=3001 electron . --dev",
        "dev:8000": "PORT=8000 electron . --dev",
        "build": "electron-builder",
        "dist": "electron-builder --publish=never",
        "security-check": "npx electron-builder --dir --config.nsis.oneClick=false",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "keywords": [
        "electron",
        "desktop",
        "localhost",
        "wrapper",
        "dev-server",
        "development"
    ],
    "author": "Tom Ballard",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "electron": "^32.0.0",
        "electron-builder": "^25.0.0",
        "electron-test": "^1.0.0",
        "jest": "^30.0.5"
    },
    "dependencies": {
        "express": "^4.19.2",
        "express-rate-limit": "^7.2.0",
        "helmet": "^7.1.0",
        "validator": "^13.12.0"
    },
    "build": {
        "appId": "com.localwrap.app",
        "productName": "LocalWrap",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "server.js",
            "public/**/*",
            "!public/**/*.md",
            "assets/**/*",
            "node_modules/**/*",
            "!node_modules/**/test/**/*",
            "!node_modules/**/*.d.ts"
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico",
            "requestedExecutionLevel": "asInvoker"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns",
            "hardenedRuntime": true,
            "entitlements": "assets/entitlements.plist"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": "always",
            "createStartMenuShortcut": true
        }
    }
}
