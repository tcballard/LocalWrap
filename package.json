{
    "name": "localwrap",
    "version": "1.0.0",
    "description": "Desktop development server - Turn scripts into desktop apps",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "start:3000": "PORT=3000 electron .",
        "start:3001": "PORT=3001 electron .",
        "start:3002": "PORT=3002 electron .",
        "start:8000": "PORT=8000 electron .",
        "start:8080": "PORT=8080 electron .",
        "dev:3001": "PORT=3001 electron . --dev",
        "dev:8000": "PORT=8000 electron . --dev",
        "build": "electron-builder",
        "build:mac": "electron-builder --mac",
        "build:win": "electron-builder --win",
        "build:linux": "electron-builder --linux",
        "dist": "electron-builder --publish=never",
        "dist:mac": "electron-builder --mac --publish=never",
        "dist:win": "electron-builder --win --publish=never",
        "dist:linux": "electron-builder --linux --publish=never",
        "security-check": "npx electron-builder --dir --config.nsis.oneClick=false",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "pack": "electron-builder --dir",
        "release": "electron-builder --publish=never",
        "release:win": "electron-builder --win --publish=never",
        "release:mac": "electron-builder --mac --publish=never",
        "release:linux": "electron-builder --linux --publish=never",
        "release:all": "electron-builder --win --mac --linux --publish=never"
    },
    "keywords": [
        "electron",
        "desktop",
        "localhost",
        "wrapper",
        "dev-server",
        "development"
    ],
    "author": "Tom Ballard",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "electron": "^32.0.0",
        "electron-builder": "^25.0.0",
        "electron-test": "^1.0.0",
        "jest": "^30.0.5"
    },
    "dependencies": {
        "express": "^4.19.2",
        "express-rate-limit": "^7.2.0",
        "helmet": "^7.1.0",
        "validator": "^13.12.0"
    },
    "build": {
        "appId": "com.localwrap.app",
        "productName": "LocalWrap",
        "copyright": "Copyright Â© 2025 Tom Ballard",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "public/**/*",
            "!public/**/*.md",
            "assets/**/*",
            "node_modules/**/*",
            "!node_modules/**/test/**/*",
            "!node_modules/**/*.d.ts",
            "!node_modules/**/.bin",
            "!**/node_modules/.cache"
        ],
        "compression": "maximum",
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": ["x64", "ia32"]
                },
                {
                    "target": "portable",
                    "arch": ["x64"]
                }
            ],
            "icon": "assets/icon.ico",
            "requestedExecutionLevel": "asInvoker",
            "publisherName": "Tom Ballard",
            "verifyUpdateCodeSignature": false
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns",
            "category": "public.app-category.developer-tools"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png",
            "category": "Development"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "allowElevation": false,
            "createDesktopShortcut": "always",
            "createStartMenuShortcut": true,
            "menuCategory": "Development Tools",
            "shortcutName": "LocalWrap",
            "uninstallDisplayName": "LocalWrap - Desktop Development Server",
            "installerIcon": "assets/icon.ico",
            "uninstallerIcon": "assets/icon.ico",
            "installerHeader": "assets/icon.ico",
            "include": "build/installer.nsh"
        },
        "portable": {
            "artifactName": "LocalWrap-Portable-${version}.${ext}"
        }
    }
}
